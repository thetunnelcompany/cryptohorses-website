server {
    listen 80;
    listen [::]:80;

    server_name api.crypto-horses.com www.api.crypto-horses.com;
    return 301 https://api.crypto-horses.com$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name www.api.crypto-horses.com;
    return 301 https://api.crypto-horses.com$request_uri;

    ssl_certificate /etc/letsencrypt/live/api.crypto-horses.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.crypto-horses.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/api.crypto-horses.com/chain.pem;

    include snippets/ssl-params.conf;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name api.crypto-horses.com;
    root /var/www/api.crypto-horses.com/html;
    index index.html;

    ssl_certificate /etc/letsencrypt/live/api.crypto-horses.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.crypto-horses.com/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/api.crypto-horses.com/chain.pem;

    include snippets/ssl-params.conf;
}
